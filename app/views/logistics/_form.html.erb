<%= simple_form_for(@logistic, html: {class: "form-horizontal"} ) do |f| %>
  <%= f.error_notification %>

    <div class="field">
     <%= f.input :user_id, collection: User.all, label_method: :full_name %>
    </div>
    <div class="field"> 
     <%= f.input :content %>
    </div> 

    <div class="form-actions">
     <%= f.button :submit %>
    </div>
<% end %>
