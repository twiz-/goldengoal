<%= simple_form_for(@player) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :player_name %>
  </div>
  
  <div class="field">
     <%= f.input :user_id, collection: User.all, label_method: :full_name %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
